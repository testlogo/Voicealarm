<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="26dp"
    >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择音频文件"

                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:id="@+id/btn_pick_audio_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        style="@style/ImageStyle"
                        android:src="@drawable/ic_folder"/>

                    <TextView
                        android:id="@+id/tv_audio_path_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="选择文件"
                        android:layout_marginStart="16dp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <ImageView
                        style="@style/ImageStyle"
                        android:src="@drawable/ic_arrow"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剪切结果"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tv_msg_info"
                android:layout_marginTop="16dp"
                android:background="#27FFC107"
                android:textColor="#ff0000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

    <org.florescu.android.rangeseekbar.RangeSeekBar
        android:id="@+id/rangeSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:barHeight="0dp"
        />

    <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">





                <TextView
                    android:id="@+id/et_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:inputType="number"
                    android:clickable="false"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_audio_length_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:inputType="number"
                    android:clickable="false"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="23dp"
                    app:cardElevation="4dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        android:id="@+id/btn_play_audio"
                        android:clickable="true"
                        style="@style/ImageStyle"
                        android:src="@drawable/ic_play" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="23dp"
                    app:cardElevation="4dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        style="@style/ImageStyle"
                        android:id="@+id/btn_cut_audio"
                        android:src="@drawable/ic_cut" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>


</LinearLayout>

